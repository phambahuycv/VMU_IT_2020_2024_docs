<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".N04_15">

    <TextView
        android:id="@+id/tvi10415"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="100"
        android:textAlignment="center"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvi20415"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="90"
        android:textAlignment="center"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/tvi10415"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvi30415"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:text="80"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvi10415"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvi40415"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="70"
        android:textAlignment="center"
        android:background="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/tvi30415"
        app:layout_constraintTop_toBottomOf="@+id/tvi20415"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button125"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="rand"
        android:onClick="btnRand_Clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvi30415" />

    <Button
        android:id="@+id/button126"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="sort"
        android:onClick="btnSort_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button125"
        app:layout_constraintTop_toBottomOf="@+id/tvi30415" />

    <Button
        android:id="@+id/button127"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="save"
        android:onClick="btnSave_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button126"
        app:layout_constraintTop_toBottomOf="@+id/tvi30415" />

    <Button
        android:id="@+id/button128"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="load"
        android:onClick="btnLoad_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button127"
        app:layout_constraintTop_toBottomOf="@+id/tvi30415" />
</androidx.constraintlayout.widget.ConstraintLayout>