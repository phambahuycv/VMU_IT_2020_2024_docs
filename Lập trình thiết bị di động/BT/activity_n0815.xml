<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".N08_15">

    <TextView
        android:id="@+id/tvw10815"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/red"
        android:text="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvw20815"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        android:text="90"
        app:layout_constraintStart_toEndOf="@+id/tvw10815"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvw30815"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:text="80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvw10815" />

    <TextView
        android:id="@+id/tvw40815"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/yellow"
        android:text="70"
        app:layout_constraintStart_toEndOf="@+id/tvw30815"
        app:layout_constraintTop_toBottomOf="@+id/tvw20815" />

    <Button
        android:id="@+id/button129"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="RAND"
        android:onClick="btnRand_Clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvw30815" />

    <Button
        android:id="@+id/button130"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="sort"
        android:onClick="btnSort_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button129"
        app:layout_constraintTop_toBottomOf="@+id/tvw30815" />

    <Button
        android:id="@+id/button131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="save"
        android:onClick="btnSave_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button130"
        app:layout_constraintTop_toBottomOf="@+id/tvw30815" />

    <Button
        android:id="@+id/button132"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="load"
        android:onClick="btnLoad_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button131"
        app:layout_constraintTop_toBottomOf="@+id/tvw30815" />
</androidx.constraintlayout.widget.ConstraintLayout>