<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".N01_15">

    <TextView
        android:id="@+id/tvw10115"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="100"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvw20115"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="90"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/tvw10115"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvw30115"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="80"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvw10115" />

    <TextView
        android:id="@+id/tvw40115"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="70"
        android:background="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/tvw30115"
        app:layout_constraintTop_toBottomOf="@+id/tvw20115" />

    <Button
        android:id="@+id/button133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="rand"
        android:onClick="btnRand_Clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvw30115" />

    <Button
        android:id="@+id/button134"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="sort"
        android:onClick="btnSort_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button133"
        app:layout_constraintTop_toBottomOf="@+id/tvw30115" />

    <Button
        android:id="@+id/button135"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="save"
        android:onClick="btnSave_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button134"
        app:layout_constraintTop_toBottomOf="@+id/tvw30115" />

    <Button
        android:id="@+id/button136"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="load"
        android:onClick="btnLoad_Clicked"
        app:layout_constraintStart_toEndOf="@+id/button135"
        app:layout_constraintTop_toBottomOf="@+id/tvw30115" />
</androidx.constraintlayout.widget.ConstraintLayout>